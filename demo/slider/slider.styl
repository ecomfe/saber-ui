@require 'rider-ui/core'


// mixins
// ================

// base
ui-slider-base()
    width: 100%
    overflow: hidden
    relative: _
    user-select: none
    -webkit-touch-callout: none
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

    > [data-role~=wrapper]
        overflow: hidden
        relative: _
        white-space: nowrap
        transform: translateZ(0)

        [data-role~=item]
            overflow: hidden
            position: relative
            float: left
            box-sizing: border-box
            text-align: center
            img
                width: 100%

    > [data-role~=dot]
        absolute: _ 0 6px _
        padding: 0 6px
        text-align: right

        > b
            display: inline-block
            margin: 0 4px
            size: 6px
            border-radius: 3px
            background: rgba(125, 125, 125, 0.8)

            // &[{$-ui-attr}~=active]
            &.active
                background: #fff


// exports
// ================

.ui-slider
    ui-slider-base()
