@require 'rider-ui/default'


.container
    padding: 44px 10px

    h2
        margin: 10px 0

.wrapper
    relative: _
    // display: flex
    // align-items: flex-start
    box-shadow: rem(2px) rem(2px) rem(5px) #DDD
    margin: rem(10px)
    padding: rem(5px)
    min-height: rem(200px)

.loading
    display: box
    box-orient: horizontal
    box-pack: center
    box-align: center

    absolute: left, top
    z-index: 99

    size(100%)

    background-color: rgba(0, 0, 0, 0.6)
    color: #fff
    font-size: 150%
    font-weight: bold







.container
    //
    [data-role=navigator]
        font-weight: bold

    .panel
        box-sizing: content-box
        padding: rem(6px)

    .ui-button
        font-size: rem(16px)
        padding: rem(5px) rem(10px)





/* basic.html */
#wrapper1
    //
    .ui-tab
        border: 1px solid #d4d4d4
        clearfix()

        [data-role=navigator]
            background-color: #f4f4f4
            color: #4a4a4a

        [data-role=trigger]
            border: solid #d4d4d4
            border-width: 0 0 1px 1px
            &:first-child
                border-width: _ _ _ 0

            &.active
                background-color: #fff
                border-width: 0 0 0 1px
                &:first-child
                    border-width: 0

        &[data-ui~=vertical]

            [data-role=navigator],
            .panel
                float: left

            [data-role=trigger]
                border-width: 1px 1px 0 0
                &.active
                    border-width: _ 0 _ _
                &:first-child
                    border-width: 0 _ _ _


#tabConsole
    margin: rem(10px) 0

    .ui-btn
        margin: 3px

#innerTab
    width: rem(250px)
    border: rem(1px) solid #d4d4d4






/* menu.html */
#wrapper3 .ui-tab,
#wrapper4 .ui-tab
    background: #2773dc;

.dropmenu
    display: flex
    absolute: left 50%, top rem(25px)
    z-index: 9
    size(70%, 70%)
    overflow: hidden
    box-shadow: rem(3px) rem(3px) rem(6px) #ddd
    background-color: #fff

    .menu, .panel
        flex: 1
        height: 100%
        vertical-align: top
        word-break: break-all

    .menu
        min-width: rem(90px)

    .panels
        relative()
        flex: 2
        width: 100%

    .ui-tab
        background: #2773dc


.dropmenu-hidden
    display: none

